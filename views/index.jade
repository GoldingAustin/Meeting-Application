extends layout

block content
    #wrapper
        h2 Welcome to #{title}
        h3 Please enter the name of your meeting to begin
        form#newMeet(method="post" action="createMeeting")
            input#meetingName(name="meetingName" required)
            input#create(type="submit", class="button")
        h3 Or search for a meeting by entering the Meeting ID below
        form#searchMeet(action="schedule" method="get")
            input#meetingID(required name="meetingId" placeholder="Meeting ID")
            input#search(type="submit", class="button")
